<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_payment_method) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_payment_methods_list), admin_payment_methods_path, icon: 'arrow-left' %>
  </li>
<% end %>

<div class="row">
  <fieldset class="no-border-top">
    <%=
		render 'settings'
	%>

    <%= form_for [:admin, @resource], as: :payment_method, url: spree.admin_payment_method_path(@resource), method: :patch do |f|
	%>
      <%= render 'form_fields', f: f %>

      <div class="form-buttons" data-hook="buttons">
        <%= button Spree.t(:update), 'refresh' %>
        <%= Spree.t(:or) %>
        <%= button_link_to Spree.t(:cancel), edit_admin_payment_method_path(@resource), icon: "remove" %>
      </div>
    <% end %>
  </fieldset>
</div>